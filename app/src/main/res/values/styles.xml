<resources>
    <style name="Widget.MukMap.Toolbar.Base" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="minHeight">?attr/actionBarSize</item>
        <item name="titleEnabled">false</item>
        <item name="colorControlNormal">?attr/colorPrimary</item>
    </style>

    <style name="Widget.MukMap.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">?attr/colorPrimary</item>
    </style>

    <style name="Widget.MukMap.Button.Base" parent="Widget.AppCompat.Button">
        <item name="android:padding">0dp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Widget.MukMap.Button.Subscribe" parent="Widget.MukMap.Button.Base">
        <item name="android:background">@drawable/back_button_subscribe</item>
    </style>

    <style name="Widget.MukMAp.ImageButton.Base" parent="Widget.MukMap.Button.Base">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Widget.MukMAp.ImageButton.Back" parent="Widget.MukMAp.ImageButton.Base">
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <style name="Widget.MukMap.TextView.Base" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Widget.MukMap.TextView.Headline3" parent="Widget.MukMap.TextView.Base">
        <item name="android:textAppearance">?attr/textAppearanceHeadline3</item>
    </style>

    <style name="Widget.MukMap.TextView.Headline1" parent="Widget.MukMap.TextView.Base">
        <item name="android:textAppearance">?attr/textAppearanceHeadline1</item>
        <item name="android:lineSpacingMultiplier">0.7</item>
    </style>

    <style name="Widget.MukMap.TextView.ListTitle" parent="Widget.MukMap.TextView.Base">
        <item name="android:textAppearance">?attr/textAppearanceHeadline4</item>
    </style>
</resources>
