<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:paddingStart="@dimen/padding_side"
    android:paddingEnd="@dimen/padding_side"
    android:paddingBottom="32dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="100dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/tv_restaurant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_body"
        android:layout_marginEnd="@dimen/margin_body"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="존맛탱 한우 먹고 싶은 가게"
        android:textAppearance="?attr/textAppearanceHeadline2"
        app:layout_constraintEnd_toStartOf="@id/btn_favorite"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_address"/>

    <Button
        android:id="@+id/btn_favorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_restaurant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_restaurant"
        app:layout_constraintTop_toTopOf="@id/tv_restaurant" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_body"
        android:text="강남대로 109길 43"
        app:layout_constraintBottom_toTopOf="@id/rcv_channels"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_restaurant" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_channels"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_address" />
</androidx.constraintlayout.widget.ConstraintLayout>