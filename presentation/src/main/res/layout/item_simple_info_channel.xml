<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_channel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_body">

    <ImageView
        android:id="@+id/iv_channel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/channel_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_channel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_channel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_body"
        android:layout_marginBottom="@dimen/margin_body"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="건대한우TV"
        android:textAppearance="?attr/textAppearanceHeadline4"
        app:layout_constraintBottom_toTopOf="@id/tv_channel_info"
        app:layout_constraintEnd_toStartOf="@id/btn_subscribe"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/iv_channel"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_subscribe"
        style="@style/Widget.MukMap.Button.Subscribe"
        android:layout_width="75dp"
        android:layout_height="28dp"
        android:text="@string/subscribe"
        android:textAppearance="@style/TextAppearance.MukMap.Button.Subscribe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_channel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_channel_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_body"
        android:text="129 reviews, 380 followers"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/iv_channel"
        app:layout_constraintTop_toBottomOf="@id/tv_channel" />

</androidx.constraintlayout.widget.ConstraintLayout>